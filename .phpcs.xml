<?xml version="1.0"?>
<ruleset name="SEO AI Meta Generator">
	<description>WordPress Coding Standards for SEO AI Meta Generator</description>

	<!-- What to scan -->
	<file>.</file>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/tests/*</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show progress -->
	<arg name="basepath" value="./"/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/>

	<!-- Rules: Check PHP version -->
	<config name="php_version" value="70400"/>

	<!-- Rules: WordPress Coding Standards -->
	<rule ref="WordPress">
		<exclude name="WordPress.Files.FileName"/>
		<exclude name="WordPress.NamingConventions.PrefixAllGlobals"/>
	</rule>

	<!-- Rules: WordPress-Extra -->
	<rule ref="WordPress-Extra"/>

	<!-- Rules: WordPress-Docs -->
	<rule ref="WordPress-Docs"/>

	<!-- Rules: Custom exclusions -->
	<rule ref="WordPress.Security.EscapeOutput">
		<severity>5</severity>
	</rule>

	<!-- Show sniff codes in all reports -->
	<arg value="s"/>
</ruleset>

